---
import { Image } from 'astro:assets'
import Layout from '../layouts/Layout.astro'
import Button from '../components/Button.astro'

import page404Image from '../assets/images/404.jpg'
---

<Layout>
	<div class="container mx-auto flex flex-col text-center">
		<div class="mx-auto overflow-hidden">
			<Image src={page404Image} alt="404 page" format="avif" class="h-full w-full object-cover" />
		</div>
		<h2 class="my-4 font-serif text-3xl">Sorry, this page is eating a donut.</h2>
		<p class="mt-3 flex justify-center">
			<Button text="Go Back" desc="Go to main page" href="/" />
		</p>
	</div>
</Layout>
