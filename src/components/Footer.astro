---
import { Image } from 'astro:assets'
import { Icon } from 'astro-icon/components'
import { getSettings } from '../lib/data-services'

const contactData = await getSettings()
---

<footer id="contacts" data-anchor="contacts" class="mt-auto flex bg-rose-300">
	<div class="container mx-auto flex pt-[1rem] pb-[4rem]">
		<div class="flex w-full flex-col justify-between gap-8 md:flex-row md:gap-1">
			<div class="flex justify-center md:w-1/3 md:justify-start">
				<div class="flex flex-col items-center space-y-8">
					<a href="/" class="flex" aria-label="Go to main page">
						<Image src="/logo2.svg" alt="Logo" width={180} height={50} />
					</a>
					<div class="flex gap-x-4">
						<a
							href=`${contactData?.facebook}`
							target="_blank"
							aria-label="Contact in Facebook"
							class="rounded-full border border-neutral-50 p-2 text-neutral-50 transition-transform duration-300 hover:scale-110 hover:text-rose-700"
						>
							<Icon name="ri:facebook-fill" width="30" height="30" />
						</a>
						<a
							href=`${contactData?.instagram}`
							target="_blank"
							aria-label="Contact in Instagram"
							class="rounded-full border border-neutral-50 p-2 text-neutral-50 transition-transform duration-300 hover:scale-110 hover:text-rose-700"
						>
							<Icon name="mdi:instagram" width="30" height="30" />
						</a>
						<a
							href=`tel:${contactData.phoneValue}`
							aria-label="Contact by phone"
							class="rounded-full border border-neutral-50 p-2 text-neutral-50 transition-transform duration-300 hover:scale-110 hover:text-rose-700"
						>
							<Icon name="mdi:phone" width="30" height="30" />
						</a>
					</div>
				</div>
			</div>
			<div class="hidden flex-col pl-4 md:flex md:w-1/3">
				{/* space-y-3 md:space-y-10 justify-end */}
				<h4 class="mt-5 mb-3 text-lg font-semibold">Menu</h4>
				<div class="flex gap-10">
					<div class="flex flex-col gap-4">
						<a
							href="/#home"
							class="relative after:block after:h-[2px] after:w-0 after:bg-rose-700 after:transition-all after:duration-300 hover:after:w-full"
							aria-label="Go to main page"
						>
							Home</a
						>
						<a
							href="/#catalog"
							class="relative after:block after:h-[2px] after:w-0 after:bg-rose-700 after:transition-all after:duration-300 hover:after:w-full"
							aria-label="Watch all sweet products in Catalog">Catalog</a
						>
					</div>
					<div class="flex flex-col gap-4">
						<a
							href="/#reviews"
							class="relative after:block after:h-[2px] after:w-0 after:bg-rose-700 after:transition-all after:duration-300 hover:after:w-full"
							aria-label="Read reviews from clients">Reviews</a
						>
						<a
							href="/#how-to-order"
							class="relative after:block after:h-[2px] after:w-0 after:bg-rose-700 after:transition-all after:duration-300 hover:after:w-full"
							aria-label="How to order form">How to order</a
						>
					</div>
				</div>
			</div>
			<div class="flex flex-col items-center pl-4 md:w-1/3 md:items-start">
				<h4 class="mt-5 mb-3 text-lg font-semibold">Contacts</h4>
				<div class="flex flex-col gap-y-2">
					<a
						href=`tel:${contactData?.phoneValue}`
						aria-label="Contact by phone"
						class="hover:font-bold hover:text-rose-900"
					>
						{contactData?.phoneText}
					</a>
					<a
						href=`mailto:${contactData?.email}`
						aria-label="Contact by email"
						class="hover:font-bold hover:text-rose-900"
					>
						{contactData?.email}
					</a>

					<a
						href=`${contactData?.developer}`
						target="_blank"
						aria-label="See who developed this website"
						class="mt-10 flex"
					>
						<span>website developed by</span>
						<div class="w-[45px] pl-2">
							<Image
								src="/kv-logo.svg"
								alt="Logo Developer"
								width={81}
								height={67}
								class="w-full"
							/>
						</div>
					</a>
				</div>
			</div>
		</div>
	</div>
</footer>
