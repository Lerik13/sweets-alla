---
import '../styles/global.css';
import '../styles/form.css';
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';
export interface Props {
	title?: string;
	description?: string;
}

const {
	title = "Sweets by Alla",
	description = "Cakes and other handmade sweet treats in Edmonton west-side"
} = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name= "description" content={description} />
		<title>{title}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400&family=Raleway:wght@300;400;500&family=Roboto&display=swap" rel="stylesheet">
	</head>
	<body class="min-h-screen flex flex-col bg-white text-neutral-900 font-sans text-lg">
		<Nav />
		<main class="text-sm mb-[4rem]">
			<slot />
		</main>
		<Footer />
	</body>
</html>
